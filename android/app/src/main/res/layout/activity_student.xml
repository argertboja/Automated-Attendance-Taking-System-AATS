<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="70dp"
    android:orientation="vertical"
    tools:context=".StudentActivity">

        <TableLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/table_border"
            android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E4E4E4">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attendance Status Table"
                            />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:weightSum="10">

                        <ImageView
                            android:id="@+id/studentImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            tools:srcCompat="@tools:sample/avatars[0]" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E4E4E4"
                    android:weightSum="10">

                        <TextView
                            android:id="@+id/student_ID_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text="ID : "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/student_ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:maxLines="1"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:stretchColumns="*"
                    android:background="#FFFFFF">
                        <TextView
                            android:id="@+id/accountOwner_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Name : "
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/accountOwner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_weight="8"
                            android:text="Full Name"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E4E4E4"
                    android:weightSum="10">

                        <TextView
                            android:id="@+id/student_current_course_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:maxLines="1"
                            android:text="Course : "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/student_current_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:maxLines="1"
                            android:text="Course"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:background="#FFFFFF">

                        <TextView
                            android:id="@+id/current_hour_student_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Current Hour:"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/current_hour_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Current Hour:"
                            android:layout_weight="8"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="30dp"
                    android:background="#E4E4E4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="8"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/present"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dip"
                                    android:layout_weight="0.5"
                                    android:contextClickable="true"
                                    android:src="@drawable/tick" />

                                <ImageView
                                    android:id="@+id/absent"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="50dip"
                                    android:layout_weight="0.5"
                                    android:contextClickable="true"
                                    android:src="@drawable/x" />
                        </LinearLayout>
                </TableRow>
        </TableLayout>

</LinearLayout>